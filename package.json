		"@commitlint/config-conventional": "^17.4.4",
		"@swc/core": "^1.3.42",
		"@vitest/coverage-c8": "^0.29.7",
		"@vitest/ui": "^0.29.7",
		"husky": "^8.0.3",
		"is-ci": "^3.0.1",
		"lint-staged": "^13.2.0",
