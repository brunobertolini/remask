{
	"name": "remask",
	"version": "0.1.0-alpha.5",
	"license": "MIT",
	"main": "dist/index.js",
	"umd:main": "dist/index.umd.js",
	"module": "dist/index.m.js",
	"source": "src/index.js",
	"scripts": {
		"test": "jest",
		"lint": "prettier \"src/**/*.{js,jsx,ts,tsx}\" --write",
		"dev": "microbundle watch --target browser --name remask",
		"build": "microbundle build --target browser --name remask",
		"release": "standard-version",
		"prerelease": "yarn test && yarn build"
	},
	"files": [
		"dist/",
		"package.json",
		"README.md"
	],
	"author": {
		"name": "Bruno Bertolini",
		"email": "dev@brunobertolini.com",
		"url": "http://brunobertolini.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/brunobertolini/remask"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{{js,jsx,mjs,ts,tsx,md,mdx}}": [
			"yarn lint",
			"git add"
		]
	},
	"devDependencies": {
		"@babel/preset-env": "^7.7.4",
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-conventional": "^8.2.0",
		"babel": "^6.23.0",
		"babel-cli": "^6.26.0",
		"babel-jest": "^24.9.0",
		"husky": "^3.1.0",
		"jest": "^24.9.0",
		"lint-staged": "^9.5.0",
		"microbundle": "^0.11.0",
		"prettier": "^1.19.1",
		"standard-version": "^8.0.1"
	},
	"dependencies": {
		"vanilla-masker": "^1.2.0"
	},
	"peerDependencies": {
		"vanilla-masker": "^1.2.0"
	}
}
